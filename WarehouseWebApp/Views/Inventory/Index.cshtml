@model List<DataLayer.Models.Item>
@{
    ViewData["Title"] = "Warehouse Inventory";
}

<h1>Warehouse Inventory</h1>
<div>
<a asp-controller="Inventory" asp-action="Create" class="btn btn-primary">Add New Item</a>
</div>

<table class="table table-hover table-borderless">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Manufacturer</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Category</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td class="text-truncate-custom">@item.Name</td>
                <td class="text-truncate-custom">@item.Manufacturer</td>
                <td>@item.Quantity</td>
                <td>@item.Price.ToString("C")</td>
                <td class="text-truncate-custom">@item.Category</td>
                <td class="text-truncate-custom">@item.Description</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-info">Edit</a>

                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="Inventory" asp-action="Create" class="btn btn-primary">Add New Item</a>