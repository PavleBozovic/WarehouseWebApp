@model List<DataLayer.Models.Item>
@{
    ViewData["Title"] = "Warehouse Inventory";
}

<h1>Warehouse Inventory</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Manufacturer</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Category</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Manufacturer</td>
                <td>@item.Quantity</td>
                <td>@item.Price.ToString("C")</td> @* Display as currency *@
                <td>@item.Category</td>
                <td>@item.Description</td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="Inventory" asp-action="Create" class="btn btn-primary">Add New Item</a>