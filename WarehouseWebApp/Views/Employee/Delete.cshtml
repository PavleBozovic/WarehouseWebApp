@model DataLayer.Models.Employee
@{
    ViewData["Title"] = "Delete Employee";
}

<h1>Delete Employee</h1>

<h3 class="text-danger">Are you sure you want to delete the employee '@Model.Name @Model.Surname'? This action cannot be undone.</h3>
<hr />

<div>
    <h4>Employee Details</h4>
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Surname)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Surname)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Role)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Role)
        </dd>

    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />

        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Cancel and Return to List</a>
    </form>
</div>