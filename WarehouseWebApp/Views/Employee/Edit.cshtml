@model DataLayer.Models.Employee
@{
    ViewData["Title"] = "Edit Employee";
}

<h1>Edit Employee</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Surname" class="control-label"></label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Role" class="control-label"></label>
                <input asp-for="Role" class="form-control" />
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" type="password" id="employeePassword" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-check my-2 d-none" id="passwordToggleContainer">
                <input class="form-check-input" type="checkbox" id="showPasswordToggle">
                <label class="form-check-label" for="showPasswordToggle">
                    Show Password
                </label>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const passwordInput = document.getElementById('employeePassword');
            const toggleContainer = document.getElementById('passwordToggleContainer');
            const toggleCheckbox = document.getElementById('showPasswordToggle');

            passwordInput.addEventListener('input', function () {
                if (passwordInput.value.length > 0) {
                    toggleContainer.classList.remove('d-none');
                } else {
                    toggleContainer.classList.add('d-none');
                    passwordInput.setAttribute('type', 'password');
                    toggleCheckbox.checked = false;
                }
            });

            toggleCheckbox.addEventListener('change', function () {
                if (toggleCheckbox.checked) {
                    passwordInput.setAttribute('type', 'text');
                } else {
                    passwordInput.setAttribute('type', 'password');
                }
            });
        });
    </script>
}